            "ToPort": 18191
          },
          {
            "CidrIp": {
              "Ref": "GatewaysAddresses"
            },
            "IpProtocol": "tcp",
            "FromPort": 18192,
            "ToPort": 18192
          },
          {
            "CidrIp": {
              "Ref": "GatewaysAddresses"
            },
            "IpProtocol": "tcp",
